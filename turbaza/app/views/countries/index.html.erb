<div class="container">
    <div class="page-header" style="text-align: center">
        <h1>Страны</h1>
    </div>

    <p id="notice"><%= notice %></p>

    <div class="row">
        <div class="col-md-2">
            <%= render 'form' %>
        </div>
        <div class="col-md-10">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Код страны</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @countries.each do |country| %>
                      <tr>
                        <td><%= country.name %></td>
                        <td><%= country.phone_code %></td>
                        <td><%= link_to 'Edit', edit_country_path(country), :class => 'btn btn-info' %></td>
                        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' },
                                        :class => 'btn btn-danger' %></td>
                      </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
